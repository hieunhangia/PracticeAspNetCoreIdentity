@using PracticeAspNetCoreIdentity.Client.Constants
@attribute [Route(RouteConstants.Home)]

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized>
        Logged in as @context.User.Identity?.Name
        <button @onclick="LogoutAsync">Logout</button>
    </Authorized>
    <NotAuthorized>
        <a href="@RouteConstants.Login">Login</a>
        <a href="@RouteConstants.Register">Register</a>
    </NotAuthorized>
</AuthorizeView>

@using PracticeAspNetCoreIdentity.Client.Identity
@inject IAccountManagement AccountManagement
@code
{
    private async Task LogoutAsync() => await AccountManagement.LogoutAsync();
}
