@using PracticeAspNetCoreIdentity.Client.Constants
@attribute [Route(RouteConstants.Login)]

<h3>Login</h3>

<p>@Message</p>

@if (MessageCode == "RegistrationSuccessful")
{
    <p>Registration successful. Please log in.</p>
}

<EditForm Model="@this" OnValidSubmit="LoginAsync">
    <DataAnnotationsValidator/>

    <div class="form-group">
        <label for="email">Email</label>
        <InputText id="email" type="email" class="form-control" @bind-Value="Email"/>
        <ValidationMessage For="@(() => Email)"/>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <InputText id="password" type="password" class="form-control" @bind-Value="Password"/>
        <ValidationMessage For="@(() => Password)"/>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</EditForm>

@using System.ComponentModel.DataAnnotations
@using PracticeAspNetCoreIdentity.Client.Identity
@inject IAccountManagement AccountManagement
@inject NavigationManager NavigationManager

@code {
    [Required] [EmailAddress] public string Email { get; set; } = string.Empty;

    [Required] public string Password { get; set; } = string.Empty;

    private string? Message { get; set; }

    [SupplyParameterFromQuery(Name = "message-code")]
    private string? MessageCode { get; set; }

    private async Task LoginAsync()
    {
        var result = await AccountManagement.LoginAsync(Email, Password);
        if (result.Succeeded)
        {
            NavigationManager.NavigateTo(RouteConstants.Home);
        }
        else
        {
            Message = $"Login failed. {string.Join(",", result.ErrorList)}";
        }
    }

}